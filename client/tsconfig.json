{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "jsx": "react-jsx",

    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "allowJs": true,

    "allowImportingTsExtensions": true,
    "noEmit": true,
    "resolveJsonModule": true,

    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"]
    },

    "strict": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src",
    "vite.config.ts",
    "tailwind.config.ts",
    "postcss.config.ts"
  ]
}
